<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:id="@+id/linearlayout"
    tools:context=".RoleScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="Join Us!
"
            android:textColor="#454545"
            android:textSize="35sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:text="making the world more accessible "
            android:textColor="#454545"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_vol"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_below="@+id/txt"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorpurple"
            android:drawableLeft="@drawable/ic_baseline_emoji_people_24"
            android:layout_gravity="center_horizontal"
            android:text="I'd Like to Volunteer"
            android:textAlignment="center"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_blind"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_below="@+id/txt"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/colorpurple"
            android:drawableLeft="@drawable/ic_baseline_elderly_24"
            android:layout_gravity="center_horizontal"
            android:text="I need visual assistance"
            android:textAlignment="center"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:src="@drawable/navigation"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

