<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white"
    tools:context=".SplashScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/call"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corner"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-10dp"
            >
            <TextView
                android:id="@+id/vol_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Hey John!"
                android:textColor="#454545"
                android:textSize="30sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:padding="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:text=' "We are grateful to have you here and assisting a blind person. You are welcomed to be a part of this act of kindness! This truly shows how you care for them."'
                android:textColor="#454545"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/textview_bg"
                android:text='You may receive a notification when someone needs your help'
                android:textColor="#454545"
                android:textAlignment="center"
                android:textSize="14sp" />

            <Button
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_below="@+id/txt"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorpurple"
                android:drawableLeft="@drawable/ic_baseline_help_24"
                android:layout_gravity="center_horizontal"
                android:text="Do you need help? Click here"
                android:textAlignment="center"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

